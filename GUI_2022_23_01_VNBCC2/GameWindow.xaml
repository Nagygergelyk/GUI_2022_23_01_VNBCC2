<Window x:Class="GUI_2022_23_01_VNBCC2.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_2022_23_01_VNBCC2"
        xmlns:renderer="clr-namespace:GUI_2022_23_01_VNBCC2.Renderer"
        mc:Ignorable="d"
        Title="OECOOKED" Height="450" Width="800" SizeChanged="Window_SizeChanged" Loaded="Window_Loaded"> 
    <Grid x:Name="game_grid" Background="Chocolate">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Player Name" FontSize="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="10"/>
            <Label Content="3:25" Grid.Column="1" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </Grid>

        <renderer:Display x:Name="display" Grid.Column="0" Grid.Row="1"/>
    </Grid>
</Window>
